#include <stdio.h>
#include <stdlib.h>

int main()
{
    //Exercise 3.1
    printf("******************** Exercise 3.1 ************\n");
    int num;

    for (num=1;num<=1000;num++)
              printf("%d\n",num);

    printf("\n");

        //Exercise 3.4
    printf("******************** Exercise 3.4 ************\n");
    int num4;

    for (num4=1;num4<=10;num4++)
              printf("%d\n",num4);

    printf("\n");
    int num5;

    for (num5=20;num5>=-20;num5-=4)
              printf("%d\n",num5);

    printf("\n");

        //Exercise 3.5
     printf("******************** Exercise 3.5 ************\n");
    int num6;

    for (num6=1;num6<=100;num6+=2)
              printf("%d\n",num6);

     printf("\n");

        //Exercise 3.6
    printf("******************** Exercise 3.6 ************\n");
    int i=1;
    while (i<=100)
    {
     if (i%2==0)
     {
       printf("%d\n",i);
     }

     i++;
    }

    printf("\n");

        //Exercise 3.12
    printf("******************** Exercise 3.12 ************\n");
     int y;
     int index=1;
     printf("How many times you want to display \" Hello\": ");
     scanf("%d", &y);
     if (y<0)
     {
                   printf("The number must be non-negative");
                        }
     else if (y==0)
     {
                   printf("Hello");
     }
     else
     {
      do
     {
                   printf("Hello\n");
                   index++;
     } while (index<=y);
     }

    printf("\n");



    return 0;
}
